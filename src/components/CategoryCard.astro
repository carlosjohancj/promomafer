---
interface Props {
  title: string;
  description: string;
  color: string;
  icon: string;
  href: string;
  className?: string;
}

const { title, description, color, icon, href, className = "" } = Astro.props;

// Dynamic classes based on color
const bgClass = `bg-${color}-light`;
const textClass = `text-${color}-dark`;
const hoverClass = `hover:shadow-${color}-300/50`;
const borderClass = `border-${color}-DEFAULT`;
---

<a 
  href={href} 
  class:list={[
    "category-card border-2 group rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300",
 
    borderClass,
    hoverClass,
    className
  ]}
>
  {/* Icon Section */}
  <div 
    class:list={[
      "flex items-center justify-center h-24 w-full",
      `bg-${color}-DEFAULT text-white`
    ]}
  >
    <span class="text-6xl transform transition-transform group-hover:scale-125">
      {icon}
    </span>
  </div>

  {/* Content Section */}
  <div class="p-6">
    <h2 class:list={["text-xl font-bold mb-2", textClass]}>
      {title}
    </h2>
    <p class="text-gray-600 text-sm leading-relaxed">
      {description}
    </p>
  </div>
</a>